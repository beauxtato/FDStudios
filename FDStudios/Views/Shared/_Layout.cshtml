<head>
    <meta charset="utf-8" />
    <title>Fleur DeSign Studios - @ViewBag.Title </title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="description" content="Fleur DeSign Studios is a New Orleans based studio specializing in wedding, special event, and portrait photography." />
    <meta name="keywords" content="New Orleans, Photographer, Photo, Photography, Wedding, Wedding Photography, Louisiana, Destination, Destination Wedding, New Orleans Destination" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @Styles.Render("~/Content/css")
    <!-- <link rel="stylesheet" href="less/style.less" type="text/less" media="screen" />
	<script src="js/less.min.js" type="text/javascript"></script> -->

    <!--[if IE]>
	<script type="text/javascript" src="js/ie.js"></script>
	<script type="text/javascript" src="js/respond.min.js"></script>
	<![endif]-->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="fullpage no-js">
    <header id="header" class="norma-size clearfix">
        <hgroup id="logo">
            <h1>
                @Html.ActionLink(" ", "Index", "Home", new { @class = "logo" })
            </h1>
        </hgroup>
    </header>
    <nav id="menu">
        <ul>
            <li class="arrow current_page_item">
                @Html.ActionLink("Home", "Index", "Home")
                
            </li>
        </ul>
    </nav>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>

    
</body>
</html>
